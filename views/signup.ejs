<% include header %>
<div class="form-bg">
	<form id="signup" method="post" action="/signup">
		<fieldset>
			<h2><%= title %></h2>
	    <p><input name="email" type="email" id="email" placeholder="Email" required autofocus></p>
	    <p><input name="password" type="password" id="password" placeholder="Password" required></p>
	    <p><input name="repeatPassword" type="password" id="repeatPassword" placeholder="Repeat Password" required></p>
	    <button type="submit" class="zocial guest">Sign up</button>
  	</fieldset>
	</form>
</div>
<p class="forgot">Already have an account? <a href="<%= original_url %>">Sign in</a>.</p>
<% include footer %>
