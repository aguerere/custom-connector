<% include header %>
<div class="form-bg">
	<form id="signup" method="post" action="/signup">
		<fieldset>
			<h2><%= title %></h2>
	    <p><input name="username" type="text" id="username" placeholder="Username" required></p>
	    <p><input name="email" type="text" id="email" placeholder="Email" required></p>
	    <p><input name="password" type="password" id="password" placeholder="Password" required></p>
	    <p><input name="repeatPassword" type="password" id="repeatPassword" placeholder="Repeat Password" required></p>
	    <p><input name="first_name" type="text" id="first_name" placeholder="First Name"></p>
	    <p><input name="last_name" type="text" id="last_name" placeholder="Last Name"></p>
	    <p><input name="display_name" type="text" id="display_name" placeholder="Display Name"></p>
	    <button type="submit" class="zocial guest">Sign in</button>
  	</fieldset>
	</form>
</div>
<% include footer %>